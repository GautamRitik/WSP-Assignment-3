<%- include('Partials/header.ejs') %> <!-- Include the shared header partial -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2 class="mb-4 text-center"><%= title %></h2> <!-- Display the page title dynamically -->
      <form action="/add" method="POST"> <!-- Form to add a new expense, using POST method -->
        <div class="mb-3">
          <label for="name" class="form-label">Expense Name</label> <!-- Label for the expense name input -->
          <input type="text" class="form-control" id="name" name="name" required> <!-- Input field for expense name -->
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Date</label> <!-- Label for the date input -->
          <input type="date" class="form-control" id="date" name="date" required> <!-- Input field for the date of the expense -->
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label> <!-- Label for the price input -->
          <input type="number" step="0.01" class="form-control" id="price" name="price" required> <!-- Input field for the price of the expense, allowing decimal values -->
        </div>
        <button type="submit" class="btn btn-primary btn-md mt-4">Add Expense</button> <!-- Submit button to add the expense -->
      </form>
    </div>
  </div>
</div>

<%- include('Partials/footer.ejs') %> <!-- Include the shared footer partial -->