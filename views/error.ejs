<%- include('Partials/header.ejs') %>

<div class="container text-center mt-5">
  <h1><%= message || 'An error occurred' %></h1> <!-- Display the error message -->
  <% if (typeof error !== 'undefined') { %>
    <h2>Status: <%= error.status || 500 %></h2> <!-- Display the error status code -->
    <pre><%= error.stack %></pre> <!-- Display the error stack trace for debugging -->
  <% } else { %>
    <h2>Status: 500</h2>
  <% } %>
</div>

